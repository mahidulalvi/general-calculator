        <Button Content="/" x:Name="btnDivide" HorizontalAlignment="Left" Margin="9,213,0,0" VerticalAlignment="Top" Width="76" Height="20" Grid.Column="2" Click="BtnOperators_On_Click" />
        <Button Content="Root" x:Name="buttonRoot" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top" Width="74" Height="20" Grid.Column="1" />
        <Button Content="Square" x:Name="btnSquare" HorizontalAlignment="Left" Margin="282,182,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="2.14,0.375" Height="20"/>
        <Button Content="Inverse" x:Name="btnInverse" HorizontalAlignment="Left" Margin="366,181,0,0" VerticalAlignment="Top" Width="76" Height="20"/>
        <!--<Button Content="MC" HorizontalAlignment="Left" Margin="192,137,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
        <Button Content="MR" HorizontalAlignment="Left" Margin="284,136,0,0" VerticalAlignment="Top" Width="74" Height="20"/>
        <Button Content="M+" HorizontalAlignment="Left" Margin="366,137,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="2.14,0.375" Height="20"/>
        <Button Content="M-" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top" Width="76" Height="20" Grid.Column="1"/>
        <Button Content="MS" HorizontalAlignment="Left" Margin="104,137,0,0" VerticalAlignment="Top" Width="76" Height="20" Grid.Column="1"/>
        <Button Content="M down" HorizontalAlignment="Left" Margin="209,136,0,0" VerticalAlignment="Top" Width="76" Height="20" Grid.Column="1"/>-->

        <Border BorderThickness="2" BorderBrush="Black" Margin="254,118,238,321" RenderTransformOrigin="0.52,0.5" Grid.ColumnSpan="3">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.311"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <TextBlock x:Name="CalcInput" Margin="2,2,14,0" TextWrapping="Wrap" TextAlignment="Right" Text="0" FontSize="28" RenderTransformOrigin="0.5,1.021" Grid.ColumnSpan="2" Background="White" Height="40" VerticalAlignment="Top" />
        </Border>

        <Border BorderBrush="Blue" BorderThickness="1.5" Margin="254,64,238,373" Grid.ColumnSpan="3">
            <TextBlock x:Name="CalcDisplay" FontSize="26" Background="Azure" FontWeight="Light" Margin="229,0,266,610" Grid.ColumnSpan="2"></TextBlock>
        </Border>
    </Grid>
</Window>
